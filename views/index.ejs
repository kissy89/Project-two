<main>
  <div class="welcome-banner">
    <h1>Welcome to<br><span class="headline">City Secrets</span></h1>
    <p>City Secrets shows you the best secrets of your city.</p>
    <p>Be a part of it and share your favorites in your district.</p>
    <p>Meet new people from all over the world.</p>
    <p>See the city through the eye of locals.</p>
  </div>
 

  <div class="headline-setting">
    <h2>Your city:</h2>
    <input type="text" size="15" value="Barcelona..."/>
    <a href="/places/details"><button class="btn-all">Discover all secrets</button></a>
  </div>

  <div class="wrapper">
    <h2 class="explore-posts">Discover secret spots of locals nearby:</h2>
    <div class="user-collection">  
    <% users.forEach( (user) => { %>
      <% if (user.places.length > 0){ %>
      <div class="user-post">
        <div class="user-img">
          <img src="https://cdn0.iconfinder.com/data/icons/yummy-pc/100/yummy-pc-43-512.png"/>
          <p class="username"> <%= user.username %></p>
        </div>
        <div class="user-places">
          <p>Secret spots:</p>
          <ul>
            <% for (let i = 0; user.places[i] && i < 3; i++){ %>  
              <li> <%= user.places[i].name %> </li>
            <% } %>
          </ul>
        </div>
        <a href="/users/<%= user._id %>" class="profile-link">
          <button id="btn-more-details">More Details</button>
        </a>     
        </div>
        <% } %>
      <% }) %>
    </div>
  </div>
</main>
